{
  "name": "poslos",
  "version": "1.0.0",
  "description": "ระบบ POS สำหรับร้านค้าวัสดุก่อสร้าง",
  "main": "dist/main/main.js",
  "scripts": {
    "build": "tsc && webpack --mode production && cp src/renderer/index.html dist/index.html && cp src/renderer/customer-display.html dist/customer-display.html",
    "build:dev": "tsc && webpack --mode development && cp src/renderer/index.html dist/index.html && cp src/renderer/customer-display.html dist/customer-display.html",
    "start": "npm run build && electron .",
    "dev": "concurrently \"tsc --watch\" \"webpack --watch --mode development\" \"electron .\"",
    "rebuild": "electron-rebuild",
    "postinstall": "electron-builder install-app-deps",
    "import-data": "node import-all-sheets.js",
    "prepare-template": "node scripts/create-template-db.js",
    "create-template": "ts-node scripts/create-template-from-excel.ts",
    "create-template-multilingual": "ts-node scripts/translate-and-create-template.ts",
    "pack": "npm run build && electron-builder --dir",
    "dist": "npm run prepare-template && npm run build && electron-builder",
    "build:win": "npm run prepare-template && npm run build && electron-builder --win",
    "build:win-ci": "npm run build && electron-builder --win",
    "build:mac": "npm run prepare-template && npm run build && electron-builder --mac",
    "build:linux": "npm run prepare-template && npm run build && electron-builder --linux",
    "build:all": "npm run prepare-template && npm run build && electron-builder -mwl",
    "test": "echo \"Error: no test specified\" && exit 1"
  },
  "keywords": [
    "pos",
    "electron",
    "retail"
  ],
  "author": "",
  "license": "ISC",
  "devDependencies": {
    "@google-cloud/translate": "^9.3.0",
    "@types/better-sqlite3": "^7.6.12",
    "@types/node": "^24.10.1",
    "@types/qrcode": "^1.5.6",
    "@types/react": "^19.2.5",
    "@types/react-dom": "^19.2.3",
    "@types/uuid": "^10.0.0",
    "@types/xlsx": "^0.0.35",
    "@vitalets/google-translate-api": "^9.2.1",
    "autoprefixer": "^10.4.22",
    "concurrently": "^9.2.1",
    "css-loader": "^7.1.2",
    "electron": "^39.2.1",
    "electron-builder": "^26.0.12",
    "electron-rebuild": "^3.2.9",
    "postcss": "^8.5.6",
    "postcss-loader": "^8.2.0",
    "style-loader": "^4.0.0",
    "tailwindcss": "^3.4.18",
    "ts-loader": "^9.5.4",
    "ts-node": "^10.9.2",
    "typescript": "^5.9.3",
    "uuid": "^13.0.0",
    "webpack": "^5.102.1",
    "webpack-cli": "^6.0.1"
  },
  "dependencies": {
    "axios": "^1.13.2",
    "better-sqlite3": "^12.4.6",
    "electron-pos-printer": "^1.3.8",
    "electron-store": "^11.0.2",
    "hotkeys-js": "^4.0.0-beta.6",
    "i18next": "^25.6.2",
    "i18next-browser-languagedetector": "^8.2.0",
    "qrcode": "^1.5.4",
    "react": "^19.2.0",
    "react-dom": "^19.2.0",
    "react-i18next": "^16.3.3",
    "sequelize": "^6.37.7",
    "xlsx": "^0.18.5"
  },
  "build": {
    "appId": "com.poslos.app",
    "productName": "POSLOS",
    "directories": {
      "output": "release"
    },
    "files": [
      "dist/**/*",
      "node_modules/**/*",
      "package.json"
    ],
    "extraResources": [
      {
        "from": "pos-template.db",
        "to": "pos-template.db"
      },
      {
        "from": "ส่งข้อมูลPOS.xlsx",
        "to": "ส่งข้อมูลPOS.xlsx"
      }
    ],
    "win": {
      "target": ["nsis"],
      "icon": "assets/icon.ico"
    },
    "nsis": {
      "oneClick": false,
      "allowToChangeInstallationDirectory": true,
      "createDesktopShortcut": true,
      "createStartMenuShortcut": true
    },
    "mac": {
      "target": ["dmg"],
      "icon": "assets/icon.icns",
      "category": "public.app-category.business"
    },
    "linux": {
      "target": ["AppImage"],
      "icon": "assets/icon.png",
      "category": "Office"
    }
  }
}
